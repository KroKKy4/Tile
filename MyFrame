package com.company;

import javax.swing.*;
import java.awt.*;

public class MyFrame  extends JFrame {

    MyPanel panel;
    Toolkit toolkit= Toolkit.getDefaultToolkit();
    Dimension dimension= toolkit.getScreenSize();

    public MyFrame(){
        panel = new MyPanel();
        add(panel);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setBounds(dimension.width/2-500,dimension.height/2-175,460, 420);
        setTitle("Tile");
        setVisible(true);
    }
}
